<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="create-table-prepared_order" author="tssvett">
        <createTable tableName="prepared_order">

            <column name="order_id" type="uuid">
                <constraints  primaryKey="true" primaryKeyName="pk_prepared_order" nullable="false" foreignKeyName="order_order_id_order_id" references="order(id)"/>
            </column>

            <column name="product_id" type="uuid">
                <constraints primaryKey="true" primaryKeyName="pk_prepared_order"  nullable="false" foreignKeyName="product_product_id_product_id" references="product(id)"/>
            </column>

            <column name="price" type="numeric(10, 2)">
                <constraints nullable="false"/>
            </column>

            <column name="quantity" type="numeric(10, 2)">
                <constraints nullable="false"/>
            </column>

        </createTable>
    </changeSet>

</databaseChangeLog>